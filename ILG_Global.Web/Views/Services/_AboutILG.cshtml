                            <img src="~/Assets/images/@Model.AboutILGSectionImageDetail.ImageMaster.Name" alt="@Model.AboutILGSectionImageDetail.AlternateText">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
