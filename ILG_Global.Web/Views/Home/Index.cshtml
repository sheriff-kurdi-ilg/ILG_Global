@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.AspNetCore.Builder;
@using System.Globalization;
@using Microsoft.AspNetCore.Http.Features;
@using Microsoft.Extensions.Options;


@model ILG_Global.BussinessLogic.ViewModels.HomePageVM

@{

}

<!DOCTYPE html>
<html dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft? "rtl" : "ltr")">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ILG Global | Home Page</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <!-- js -->
    <script src="../../lib/jquery/dist/jquery.js"></script>
    <script src="../../Assets/js/jquery.min.js"></script>

    <script src="../../Assets/js/popper.min.js"></script>
    <script src="../../Assets/js/bootstrap.min.js"></script>
    <script src="../../Assets/js/owl.carousel.min.js"></script>
    <link rel="icon" type="image/png" href="/Assets/images/FaveIcon.svg" />

    <!--font-->
    <link href="https://fonts.cdnfonts.com/css/gotham" rel="stylesheet">

    <!-- Font Awesome-->
    <link rel="stylesheet" href="../../Assets/fontawesome/css/all.css">

    <!-- Important Owl stylesheet -->
    <link rel="stylesheet" href="../../Assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../../Assets/css/owl.theme.default.min.css">

    <!-- style -->
    <link href="../../Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/site.en.css" rel="stylesheet" />



</head>

<body>

    




    <div id="app">
        <!--navbar-->
        <header>


            @Html.Partial("_NavigationBar")

        </header>

        <!--main-->
        <main>

            @await Html.PartialAsync("_LeaderBoard", Model.LeaderBoardSectionHeaderContent)

            <partial action="_LeaderBoard" />

            <div>
                <style>

                    .quick-contact {
                        bottom: 0;
                    }

                        .quick-contact .right-wing,
                        .quick-contact .left-wing,
                        .quick-contact .center-circle {
                            border: solid 1px red;
                            height: 200px;
                        }

                        .quick-contact .left-wing {
                            background-image: url(../images/Quick-Call/left-wing.png);
                            width: 36%;
                            border: solid 1px green;
                            background-repeat: no-repeat;
                            position: relative;
                            left: 96px;
                            background-position-y: -9px;
                            z-index: 12;
                            /* height: 10px!important; */
                        }

                        .quick-contact .center-circle {
                            background-image: url(../images/Quick-Call/quick-call-circle.png);
                            background-position-x: -22px;
                            background-repeat: no-repeat;
                            width: 16.5%;
                            z-index: 10;
                        }


                        .quick-contact .right-wing {
                            background-image: url(../images/Quick-Call/right-wing.png);
                            background-position-x: -27px;
                            position: relative;
                            left: -80px;
                            background-repeat: no-repeat;
                            width: 36%;
                            background-position-y: 61px;
                            border: solid 1px blue;
                            z-index: 12;
                        }

                        .quick-contact .wings {
                            visibility: hidden;
                        }

                        .quick-contact .left-wing a.link {
                            cursor: pointer;
                            padding: 15px 94px;
                            border: solid 1px red;
                            position: relative;
                            top: 86px;
                            left: -4px;
                        }

                        .quick-contact .right-wing a.link {
                            cursor: pointer;
                            padding: 15px 91px;
                            border: solid 1px red;
                            position: relative;
                            top: 84px;
                            right: -110px;
                        }

                </style>

                <div class="row quick-contact">

                    <div class="row col-md-6 ">
                        <div class="col-md-4 left-wing wings quick-contact-container">
                            <a class="link" href="#"></a>
                        </div>

                        <div class="col-md-3 center-circle quick-contact-container">

                        </div>
                        <div class="col-md-4 right-wing wings quick-contact-container">
                            <a class="link" href="#"></a>
                        </div>
                    </div>

                </div>

                <script>
                    $(document).ready(function () {

                        $(".quick-contact-container").mouseenter(function () {
                            $(".wings").css('visibility', 'visible');
                        });

                        $(".quick-contact-container").mouseleave(function () {
                            $(".wings").css('visibility', 'hidden');
                        });
                    });
                </script>
            </div>
    


            @await Html.PartialAsync("_OurServices", Model.OurServices)

            @await Html.PartialAsync("_SuccessStories", Model.SuccessStoriesViewModel)

            @await Html.PartialAsync("_ContactUs", Model.ContactUsSectionViewModel)

        </main>


        @await Html.PartialAsync("_Footer", Model.NewsLetterSubscribe)

    </div>

    <script>
        $(document).ready(function () {
            $(".arrow-bottom").click(function () {
                $([document.documentElement, document.body]).animate({
                    scrollTop: $("footer").offset().top
                }, 100);
            });

            $(".arrow-top").click(function () {
                $([document.documentElement, document.body]).animate({
                    scrollTop: $("header").offset().top
                }, 100);
            });
        })
        $('#success-story-slider').owlCarousel({
            autoPlay: 3000,
            speed: 0.5,
            loop: true,
            margin: 20,
            nav: true,
            navText: ["<i class=\"fas fa-arrow-left\"></i>", " <i class=\"fas fa-arrow-right\"></i>"],
            dots: false,
            responsive: {
                0: {
                    items: 1
                },
                991: {
                    items: 3
                },
                1400: {
                    items: 5
                },
                3500: {
                    items: 8
                }
            }

        })
        $('#our-service-slider').owlCarousel({
            autoPlay: 3000,
            speed: 0.5,
            loop: true,
            margin: 20,
            items: 1,
        })</script>

    }
    })
    $('#our-service-slider').owlCarousel({
    autoplay: true,
    autoplayTimeout: 3000,
    autoplayHoverPause: true,
    speed: 0.5,
    loop: true,
    margin:20,
    items:1,
    })</script>


</body><!-- hi -->

</html>
