
@using ILG_Global.BussinessLogic.ViewModels
@using ILG_Global.BussinessLogic.Models
@using System.Collections.Generic
@model ContactUsSectionVM

@{
    Layout = null;
}

<section class="container contact-us-section general-section">
    <div class="row title">
        <div class="col-12 col-sm-12 col-md-6">
            <h5 class="pb-4 pt-5">@Model.SuccessStoriesSectionHeaderContent.Title</h5>
            <h6>
                @Model.SuccessStoriesSectionHeaderContent.SubTitle
            </h6>
        </div>
    </div>
    <div class="row contact-list flex-column-reverse flex-sm-column-reverse flex-md-row">
        <div class="col-12 col-sm-12 col-md-6">
            <ul class="col-12 col-sm-12 col-md-9 px-0">

                @if (Model.ContactInformationDetails.Any())
                {
                    foreach (ContactInformationDetail oContactInformationDetail in Model.ContactInformationDetails)
                    {
                        <li class="py-4">
                            <i class="@oContactInformationDetail.ContactInformationMaster.FontAwsomeIconCssClass hi123"></i>
                            <span class="px-4">@oContactInformationDetail.Text</span>
                        </li>
                    }
                }

            </ul>
        </div>
        <div class="col-12 col-sm-12 col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6952.894945596146!2d47.99504577697576!3d29.386463226876852!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3fcf849d08e12009%3A0xda8f7499d20095bd!2sDasman%2C%20Kuwait%20City%2C%20Kuwait!5e0!3m2!1sen!2seg!4v1635987829024!5m2!1sen!2seg"
                    style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>