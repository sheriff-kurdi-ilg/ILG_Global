@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.AspNetCore.Builder;
@using System.Globalization;
@using Microsoft.AspNetCore.Http.Features;
@using Microsoft.Extensions.Options;
@using ILG_Global.Web;


@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{ 
    IRequestCultureFeature requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var ll =requestCulture.RequestCulture.Culture.Name;
    List<SelectListItem> cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();

    CultureInfo enculture = LocOptions.Value.SupportedUICultures.Where(SS => SS.Name == "en").SingleOrDefault();
    CultureInfo arculture = LocOptions.Value.SupportedUICultures.Where(SS => SS.Name == "ar").SingleOrDefault();
    var dd = Context.Features.Get<QueryStringRequestCultureProvider>();
    var dl = Context.Request.QueryString.Value;
//string returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value + Context.Request.QueryString.Value}";


    }


<nav class="navbar navbar-expand-lg ">
    <div class="container py-4 px-3 px-sm-3 px-md-0">
        <a class="navbar-brand" href="#">
            <img loading="lazy" class="img-brand w-100"
                 src="~/Assets/images/Mask_Group_25.png"
                 alt="Ideaeg logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <i class="fas fa-bars"></i>
        </button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
             aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel"></h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end w-100">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">@Localizer["About"]</a> 
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Localizer["Our Services"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Localizer["Success Stories"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Localizer["Contact us"]</a>
                        </li>
                    </ul>
                    
                        <li class="nav-item col-12 col-sm-12 col-md-2 d-flex justify-content-center align-items-center">
                            @*<a class="nav-link" href="#">
                    <i class="fas fa-globe"></i>
                    <span>AR</span>
                </a>*@


                            @if (requestCulture.RequestCulture.Culture.Name == "ar")
                            {
                                <div class="nav-link" title="@Localizer["Request culture provider:"] @requestCulture?.Provider?.GetType().Name">
                                    <form id="SelectEnglish" asp-controller="Home"
                                          asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path"
                                          method="post" class="form-horizontal" role="form">
                                        <button type="submit" class="btn btn-default btn-xs nav-link" value="@enculture" name="culture">
                                            <i class="fas fa-globe"></i>
                                            EN
                                        </button>
                                        
                                    </form>
                                </div> }
                            else
                            {
                                <div class="nav-link" title="@Localizer["Request culture provider:"] @requestCulture?.Provider?.GetType().Name">
                                    <form id="SelectEnglish" asp-controller="Home"
                                          asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path"
                                          method="post" class="form-horizontal" role="form">
                                        <button type="submit" class="btn btn-default btn-xs nav-link" value="@arculture" name="culture">
                                            <i class="fas fa-globe"></i>
                                            AR
                                        </button>

                                    </form>
                                </div>
                       
                    }


                            </li>
                            <li class="nav-item row justify-content-center align-items-center icon-col">
                                <a class="nav-link col icon" href="#">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a class="nav-link col icon" href="#">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a class="nav-link col icon" href="#">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a class="nav-link col icon border-0" href="#">
                                    <i class="fab fa-youtube"></i>
                                </a>
                            </li>
                        </ul>
            </div>
        </div>
    </div>
</nav>

<script>
    window.addEventListener("scroll", function () {

        var header = this.document.querySelector("nav");
        header.classList.toggle("scroll", this.window.scrollY > 0);

    })
</script>